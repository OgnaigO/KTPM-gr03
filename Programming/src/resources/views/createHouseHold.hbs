<h2 style="text-align: center; margin-bottom: 20px;">Thêm Hộ Khẩu Mới</h2>

<form action="/household/create" method="POST" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
  

  <div style="margin-bottom: 15px;">
    <label for="chu_ho" style="display: block; font-weight: bold;">Chủ hộ:</label>
    <input type="text" id="chu_ho" name="chu_ho" required style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="so_phong" style="display: block; font-weight: bold;">Số phòng:</label>
    <input type="text" id="so_phong" name="so_phong" required style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="so_thanh_vien" style="display: block; font-weight: bold;">Số thành viên:</label>
    <input type="number" id="so_thanh_vien" name="so_thanh_vien" required style="width: 100%; padding: 8px;">
  </div>

  <div style="text-align: center;">
    <button type="submit" style="padding: 10px 20px; font-weight: bold; background-color: #28a745; color: white; border: none; border-radius: 5px;">
      Thêm hộ khẩu
    </button>
  </div>
</form>
