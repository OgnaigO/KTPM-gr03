<h2 style="text-align: center; margin-bottom: 20px;">Thay Đổi Thông Tin Nhân Khẩu</h2>

<form action="/citizen/{{citizens._id}}?_method=PUT" method="POST" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
  <div style="margin-bottom: 15px;">
    <label for="ho_ten" style="display: block; font-weight: bold;">Họ tên:</label>
    <input type="text" value="{{citizens.ho_ten}}" id="ho_ten" name="ho_ten" required style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="tuoi" style="display: block; font-weight: bold;">Tuổi:</label>
    <input type="number" value="{{citizens.tuoi}}" id="tuoi" name="tuoi" required style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="gioi_tinh" style="display: block; font-weight: bold;">Giới tính:</label>
    <select id="gioi_tinh" name="gioi_tinh" required style="width: 100%; padding: 8px;">
  <option value="">-- Chọn giới tính --</option>
  <option value="Nam" {{#if (eq citizens.gioi_tinh "Nam")}}selected{{/if}}>Nam</option>
  <option value="Nữ" {{#if (eq citizens.gioi_tinh "Nữ")}}selected{{/if}}>Nữ</option>
</select>
  </div>

  <div style="margin-bottom: 15px;">
    <label for="so_cccd" style="display: block; font-weight: bold;">Số CCCD:</label>
    <input type="text" value="{{citizens.so_cccd}}"  id="so_cccd" name="so_cccd" required style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="so_dien_thoai" style="display: block; font-weight: bold;">Số điện thoại:</label>
    <input type="text"  value="{{citizens.so_dien_thoai}}" id="so_dien_thoai" name="so_dien_thoai" style="width: 100%; padding: 8px;">
  </div>

  <div style="margin-bottom: 15px;">
    <label for="trang_thai" style="display: block; font-weight: bold;">Trạng thái:</label>
    <select id="trang_thai" name="trang_thai" required style="width: 100%; padding: 8px;">
  <option value="">-- Chọn trạng thái --</option>
  <option value="đang ở" {{#if (eq citizens.trang_thai "đang ở")}}selected{{/if}}>Đang ở</option>
  <option value="đã chuyển đi" {{#if (eq citizens.trang_thai "đã chuyển đi")}}selected{{/if}}>Đã chuyển đi</option>
  <option value="đã qua đời" {{#if (eq citizens.trang_thai "đã qua đời")}}selected{{/if}}>Đã qua đời</option>
</select>
  </div>

  <div style="margin-bottom: 15px;">
    <label for="ma_ho_khau" style="display: block; font-weight: bold;">Mã hộ khẩu:</label>
    <input type="text" value="{{citizens.ma_ho_khau}}"  id="ma_ho_khau" name="ma_ho_khau" required style="width: 100%; padding: 8px;">
  </div>

  <div style="text-align: center;">
    <button type="submit" style="padding: 10px 20px; font-weight: bold; background-color: #007BFF; color: white; border: none; border-radius: 5px;">
      Lưu thay đổi
    </button>
  </div>
</form>
